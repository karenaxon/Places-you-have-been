@using PlacesYouHaveBeen.Models;
<h1>Place you have been list</h1>
@if(Model.Count == 0)
{
  <p>There aren't any places in the list yet.</p>
}

<ul>
  @foreach (Place place in Model)
  {
    <li><a href="/places/@place.Id">@place.CityName</a></li>
  }
</ul>

<a href="/places/new">Add a new item</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear all places from the list</button>
</form>
